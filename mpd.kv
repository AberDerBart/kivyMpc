#:kivy 1.0.6
#:include playlist.kv
#:include settings.kv
#:import Interface Interface
#:import NavigationDrawer libs.navigationdrawer.NavigationDrawer

<PlayerWidget>:
	artist: artist_label
	title: title_label
	progress: song_progress
	canvas:
		Color:
			rgb: 0,0,0
		Rectangle:
			pos: self.pos
			size: self.size
	NavigationDrawer:
		size: root.size
		pos: root.pos
		BoxLayout:
			canvas.before:
				Color:
					rgb: .05,.05,.05
				Rectangle:
					pos: self.pos
					size: self.size
			orientation:"vertical"
			Button:
				on_press: root.manager.current="settings"
				background_color: (0,0,0,0)
				text: u"\u2699"
				font_name: "/usr/share/fonts/TTF/Symbola.ttf"
				font_size: self.height *2/3
			Button:
				background_color: (0,0,0,0)
				text: u"\u23F0"
				font_name: "/usr/share/fonts/TTF/Symbola.ttf"
				font_size: self.height *2/3
			Button:
				background_color: (0,0,0,0)
				text: "Lib" 
				font_name: "/usr/share/fonts/TTF/Symbola.ttf"
				font_size: self.height *2/3
			Button:
				background_color: (0,0,0,0)
				text: "Pll"
				font_name: "/usr/share/fonts/TTF/Symbola.ttf"
				font_size: self.height *2/3
		BoxLayout:
			pos:root.pos
			orientation: "vertical"
			size: root.size
			padding: self.height/10
			Label:
				id: artist_label
				font_size:self.height*0.5
				text_size: self.size
				valign: "middle"
				text: "Artist"
				shorten: True
			Label:
				id: title_label
				font_size:self.height*0.5
				text_size: self.size
				valign: "middle"
				text: ""
				shorten: True
			ProgressBar:
				id: song_progress
				size_hint_y: 0.5
			PlaybackButtons:
				
			
<PlaybackButtons>:
	BoxLayout:
		size: root.size
		pos: root.pos

		Button:
			background_color: (0,0,0,0)
			text: u"\u23EE"
			font_name: "/usr/share/fonts/TTF/Symbola.ttf"
			font_size: self.height
			on_press: Interface.prev()
		Button:
			background_color: (0,0,0,0)
			text: u"\u23EF"
			font_name: "/usr/share/fonts/TTF/Symbola.ttf"
			font_size: self.height
			on_press: Interface.toggle()
		Button:
			background_color: (0,0,0,0)
			text: u"\u23ED"
			font_name: "/usr/share/fonts/TTF/Symbola.ttf"
			font_size: self.height
			on_press: Interface.next()
