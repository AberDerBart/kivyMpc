#:kivy 1.0.6
#:include playlist.kv
#:import Interface Interface

<PlayerWidget>:
	artist: artist_label
	title: title_label
	progress: song_progress
	canvas:
		Color:
			rgb: 0,0,0
		Rectangle:
			pos: self.pos
			size: self.size
	PageLayout:
		size: root.size
		pos: root.pos
		border: 10
		BoxLayout:
			orientation: "vertical"
			size: root.size
			padding: self.height/10
			Label:
				id: artist_label
				font_size:self.height*0.5
				text_size: self.size
				valign: "middle"
				text: "Artist"
				shorten: True
			Label:
				id: title_label
				font_size:self.height*0.5
				text_size: self.size
				valign: "middle"
				text: ""
				shorten: True
			ProgressBar:
				id: song_progress
			PlaybackButtons:
		PlaylistWidget:
				
			
<PlaybackButtons>:
	BoxLayout:
		size: root.size
		pos: root.pos

		Button:
			background_color: (0,0,0,0)
			text: u"\u23EE"
			font_name: "/usr/share/fonts/TTF/Symbola.ttf"
			font_size: self.height
			on_press: Interface.prev()
		Button:
			background_color: (0,0,0,0)
			text: u"\u23EF"
			font_name: "/usr/share/fonts/TTF/Symbola.ttf"
			font_size: self.height
			on_press: Interface.toggle()
		Button:
			background_color: (0,0,0,0)
			text: u"\u23ED"
			font_name: "/usr/share/fonts/TTF/Symbola.ttf"
			font_size: self.height
			on_press: Interface.next()
