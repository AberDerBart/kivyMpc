#:kivy 1.0.6
#:import PlaylistWidget Playlist.PlaylistWidget
#:import PlaylistItem Playlist.PlaylistItem
#:import iFace Interface.iFace
#:import SimpleListAdapter kivy.adapters.simplelistadapter.SimpleListAdapter
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import CompositeListItem kivy.uix.listview.CompositeListItem
#:import SelectableView kivy.uix.listview.SelectableView
#:import BoxLayout kivy.uix.boxlayout.BoxLayout

<PlaylistWidget>:
	canvas:
		Color:
			rgb: 0,0,0
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation:"vertical"
		pos: root.pos
		size: root.size
		size: root.size
		padding: self.height/10

		BoxLayout:
			Button:
				background_color: (0,0,0,0)
				text:u"\u2B05"
				font_name: "/usr/share/fonts/TTF/Symbola.ttf"
				on_press: root.manager.current="player"
				font_size: self.height *2/3

		ListView:
			size_hint_y: 8
			selected_color: 1,0,0,1
			deselected_color: 0,1,0,1
			item_strings: [str(index) for index in range(100)]
			adapter:
				ListAdapter(
				data=["Item {0}".format(i) for i in range(100)],
				cls=PlaylistItem
				)
