#:import NavigationDrawer libs.navigationdrawer.NavigationDrawer
#:import iFace Interface.iFace

#:include navbar.kv

<SchedulerWidget>:
	canvas:
		Color:
			rgb: 0,0,0
		Rectangle:
			pos: self.pos
			size: self.size
	NavBarFrame:
		screen:root
		BoxLayout:
			size_hint_y:8
			pos:root.pos
			orientation: "vertical"
			size: root.size
			padding: self.height/10
			spacing: self.height/10
			BoxLayout:
				orientation:"horizontal"
				Label:
					size_hint_x:2
					text:"Alarm Time:"
				Button:
					text:"hh"
				Button:
					text:"mm"
				Button:
					text:"OK"
			BoxLayout:
				orientation:"horizontal"
				Label:
					size_hint_x:2
					text:"Sleep Timer:"
				Button:
					size_hint_x:2
					text:"15 min"
				Button:
					text:"OK"
