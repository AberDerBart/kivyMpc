#:kivy 1.9.2
#:import NavBar NavBar.NavBar
#:import iFace Interface.iFace


<MenuButton>:
	canvas.before:
		Color:
			rgb: .05,.05,.05
		Rectangle:
			pos: self.pos
			size: self.size
	background_color:(0,0,0,0)
	font_size: self.height *2/3

<MenuIconButton>:
	font_name: "/usr/share/fonts/TTF/Symbola.ttf"

<MenuLabel>:
	canvas.before:
		Color:
			rgb: .05,.05,.05
		Rectangle:
			pos: self.pos
			size: self.size
	background_color:(0,0,0,0)
	font_size: self.height *2/3

<VolumeDropDown>:
	MenuButton:
		text: '+'
		size_hint_y: None
		height: root.itemHeight
		on_press: iFace.incVol()
	MenuLabel:
		text: str(iFace.volume)
		size_hint_y: None
		height: root.itemHeight
	MenuButton:
		text: '-'
		size_hint_y: None
		height: root.itemHeight
		on_press: iFace.decVol()

<VolumeButton>:
	on_release:self.dropDown.open(self)

<NavBar>:
	canvas.before:
		Color:
			rgb: .05,.05,.05
		Rectangle:
			pos: self.pos
			size: self.size
	MenuIconButton:
		on_press: app.stop()
		text: u"\u2716"
	MenuIconButton:
		on_press: app.open_settings()
		on_press: root.screen.drawer.state="closed"
		text: u"\u2699"
	MenuIconButton:
		text: u"\u23F0"
	MenuButton:
		on_press: root.screen.manager.current="library"
		text: "Lib" 
	MenuButton:
		on_press: root.screen.manager.current="playlist"
		text: "Pll"
	VolumeButton:
		text:"vol"
	
