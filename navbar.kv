#:kivy 1.9.2
#:import NavBar NavBar.NavBar

<VolumeDropDown>:
	Button:
		canvas.before:
			Color:
				rgb: .05,.05,.05
			Rectangle:
				pos: self.pos
				size: self.size
		text: 'increase'
		size_hint_y: None
		height: 44
	Label:
		canvas.before:
			Color:
				rgb: .05,.05,.05
			Rectangle:
				pos: self.pos
				size: self.size
		text: '50'
		size_hint_y: None
		height: 44
	Button:
		canvas.before:
			Color:
				rgb: .05,.05,.05
			Rectangle:
				pos: self.pos
				size: self.size
		text: 'decrease'
		size_hint_y: None
		height: 44

<VolumeButton>:
	on_release:self.dropDown.open(self)

<NavBar>:
	canvas.before:
		Color:
			rgb: .05,.05,.05
		Rectangle:
			pos: self.pos
			size: self.size
	Button:
		on_press: app.stop()
		background_color: (0,0,0,0)
		text: u"\u2716"
		font_name: "/usr/share/fonts/TTF/Symbola.ttf"
		font_size: self.height *2/3
	Button:
		on_press: app.open_settings()
		on_press: root.screen.drawer.state="closed"
		background_color: (0,0,0,0)
		text: u"\u2699"
		font_name: "/usr/share/fonts/TTF/Symbola.ttf"
		font_size: self.height *2/3
	Button:
		background_color: (0,0,0,0)
		text: u"\u23F0"
		font_name: "/usr/share/fonts/TTF/Symbola.ttf"
		font_size: self.height *2/3
	Button:
		on_press: root.screen.manager.current="library"
		background_color: (0,0,0,0)
		text: "Lib" 
		font_name: "/usr/share/fonts/TTF/Symbola.ttf"
		font_size: self.height *2/3
	Button:
		on_press: root.screen.manager.current="playlist"
		background_color: (0,0,0,0)
		text: "Pll"
		font_name: "/usr/share/fonts/TTF/Symbola.ttf"
		font_size: self.height *2/3
	VolumeButton:
		text:"volume"
	
